{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"],
			"@internals/*": ["./app/z_internals/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts",
		"**/*.ts",
		"**/*.tsx",
		"app/z_internals/services/messages/toast/toaster.js"
, "app/issue/list/page.tsx", "app/components/sidebar.jsx", "app/components/topbar.jsx"	],
	"exclude": ["node_modules"]
}
